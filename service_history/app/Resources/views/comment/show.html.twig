{% extends 'base.html.twig' %}

{% block body %}
    <h3>Comment</h3>

    <p>{{ comment.text }}</p>


    <ul>
        <li>
            <a href="{{ path('comment_index') }}" class="btn btn-info" role="button">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-info" role="button">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-primary" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
