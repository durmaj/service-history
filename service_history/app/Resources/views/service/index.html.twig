{% extends 'base.html.twig' %}

{% block body %}
    <h1>Services list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Cost</th>
                <th>Date</th>
                <th>Mileage</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td><a href="{{ path('service_show', { 'id': service.id }) }}">{{ service.id }}</a></td>
                <td>{{ service.description }}</td>
                <td>{{ service.cost }}</td>
                <td>{% if service.date %}{{ service.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ service.mileage }}</td>
                <td>Comment will be there</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('service_show', { 'id': service.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('service_edit', { 'id': service.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h4>New comment</h4>
    {{ form_start(commentForm) }}
    {{ form_widget(commentForm.text) }}
    <input type="submit" value="Create" />
    {{ form_end(commentForm) }}

    <ul>
        <li>
            <a href="{{ path('service_new') }}">Create a new service</a>
        </li>
    </ul>
{% endblock %}
